<h1>Events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.image %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <a href="<%= event_path(event) %>">
    <div class="event" style="background-image: url('<%= event.image %>'); background-size: cover;">
        <span class="overlay"><%= event.name %></span>
    </div>
  </a>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>
